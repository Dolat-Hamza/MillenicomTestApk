<!-- res/layout/activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/wifiInfoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:text="Wi-Fi Information"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/brandExtracted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Brand"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toBottomOf="@+id/wifiInfoTextView"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/routerExtracted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Router"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toBottomOf="@+id/wifiInfoTextView"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btnOptimizeRouter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wifiInfoTextView"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:layout_marginTop="32dp"
                android:text="Optimize Router"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wifiInfoTextView" />

            <Button
                android:id="@+id/btnWebViewOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wifiInfoTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Open Web View"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnOptimizeRouter" />

            <Spinner
                android:id="@+id/brandSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnWebViewOpen" />

            <Spinner
                android:id="@+id/routerSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/brandSpinner" />

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</RelativeLayout>
